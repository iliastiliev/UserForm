extends layout

block users-table
  br
  table.table.table-bordered
    tr
      th.active Username
      th.active Fullname
      th.active Email
      th.active Phone
      th.active 
    each user in users 
      tr
        td #{user.username}
        td #{user.fullname}
        td #{user.email}
        td #{user.phone}
        td
          a.btn.glyphicon(href="#")
            span.glyphicon-circle-arrow-down
  
